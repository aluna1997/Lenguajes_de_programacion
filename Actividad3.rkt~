;; Función que dada una lista de números, regresa otra con la representación binaria de cada uno de
;; ellos.
;; binarios: (listof number) -> (listof number)
;(define (binarios lst)
    ;)

(define (dec->bin n aux)
  (cond [(< n 2) (srting->number aux)]
        [(if (= 0 (modulo n 2))
             (dec->bin (quotient n 2) (string-append aux "0"))
             (dec->bin (quotient n 2) (string-append aux "1"))
             
             )]
      ))


